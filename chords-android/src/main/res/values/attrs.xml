<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- XML Attribute values for the [ChordWidget] Android View. -->
    <declare-styleable name="ChordWidget">

        <!-- Whether the [ChordView] should scale the visual Chord Chart relative to it's height. A
        value of true indicates that it will be scaled to the height. -->
        <attr name="fitToHeight" format="boolean" />

        <!-- Whether the [ChordView] should display the fret numbers to the side of the chart. -->
        <attr name="showFretNumbers" format="boolean" />

        <!-- Whether the [ChordView] should display the finger numbers on the notes and bars of the chart. -->
        <attr name="showFingerNumbers" format="boolean" />

        <!-- A [StringLabelState] enum indicating whether the String number or label should be
        displayed, or if there should be no String label shown. String labels appear on the bottom
        of the chart. -->
        <attr name="stringLabelState" format="enum">
            <enum name="number" value="0" />
            <enum name="label" value="1" />
            <enum name="hide" value="2" />
        </attr>

        <!-- A [String] value used to indicate that an instrument String should be muted. -->
        <attr name="mutedStringText" format="string" />

        <!-- A [String] value used to indicate that an instrument String should be open. -->
        <attr name="openStringText" format="string" />

        <!-- The [ColorInt] value that will be used for the fret lines. -->
        <attr name="fretColor" format="color" />

        <!-- The [ColorInt] value that will be used for the fret labels. -->
        <attr name="fretLabelTextColor" format="color" />

        <!-- The [ColorInt] value that will be used for the instrument String lines. -->
        <attr name="stringColor" format="color" />

        <!-- The [ColorInt] value that will be used for the String labels. -->
        <attr name="stringLabelTextColor" format="color" />

        <!-- The [ColorInt] value that will be used for the notes and bars. -->
        <attr name="noteColor" format="color" />

        <!-- The [ColorInt] value that will be used for the note and bar labels. -->
        <attr name="noteLabelTextColor" format="color" />

        <!-- The typeface to be used for the fret label text in the view. -->
        <attr name="fretLabelTypeface" format="reference" />

        <!-- The typeface to be used for the note label text in the view. -->
        <attr name="noteLabelTypeface" format="reference" />

        <!-- The typeface to be used for the string label text in the view. -->
        <attr name="stringLabelTypeface" format="reference" />

    </declare-styleable>

</resources>